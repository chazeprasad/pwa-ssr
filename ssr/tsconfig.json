{
    "compilerOptions": {
        "module": "commonjs",
        "declaration": true,
        "removeComments": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "target": "es2017",
        "sourceMap": true,
        "outDir": "./dist",
        "baseUrl": ".",
        "incremental": true,
        "allowSyntheticDefaultImports": true,
        "strict": true,
        "noImplicitAny": false,
        "moduleResolution": "node",
        "typeRoots": [
            "node_modules/@types"
        ],
    },
    "include":[ "./src/**/*.ts" ],
    "exclude": ["node_modules", "dist"]
  }
  